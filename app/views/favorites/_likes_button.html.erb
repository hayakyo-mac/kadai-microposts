<% if current_user.like?(micropost) %>
  <%= form_for(current_user.favorites.find_by(likes_id: micropost.id), html: { method: :delete }) do |f| %>
    <%= hidden_field_tag :likes_id, micropost.id %>
    <%= f.submit 'Return', class: 'btn btn-danger btn-xs' %>
  <% end %>
<% else %>
  <%= form_for(current_user.favorites.build) do |f| %>
    <%= hidden_field_tag :likes_id, micropost.id %>
    <%= f.submit '+ Like', class: 'btn btn-primary btn-xs' %>
  <% end %>
<% end %>